<div class="steps step3 mb-3">
    <table class="h-100 w-100">
        <tr class1="h-100">
            <td>
                <div class="fw-bold fs-6 mb-3 text-center">
                    Upload your logo to include to the post
                </div>

                <div class="d-flex justify-content-center">
                    <div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="rb_upload_logo" id="rb_upload_logo1" value="0" checked>
                            <label class="form-check-label" for="rb_upload_logo1">
                                NO
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rb_upload_logo" id="rb_upload_logo2" value="1">
                            <label class="form-check-label" for="rb_upload_logo2">
                                YES
                            </label>
                        </div>
                    </div>
                </div>

            </td>
        </tr>
        <tr class="h-1 upload-panel1 hidden">
            <td>
                <div id="dropzone1" class="dropzone mb-2">
                    <div class="dz-message">Drag and drop your file here</div>
                </div>
            </td>
        </tr>
    </table>
</div>

<script>
    $(() => {
        function showUploadPanel() {
            const val = $("[name=rb_upload_logo]:checked").val();
            const panel = $(".upload-panel1");
            val == 1 ? panel.removeClass("hidden") : panel.addClass("hidden");
        }
        $("[name=rb_upload_logo]").change(showUploadPanel);
        showUploadPanel();
        app.eventBus.subscribe('config_loaded', (arg) => {
            new_page.initDropzone({
                selector: "#dropzone1",
                maxFiles: 1,
                valid_exts: new_page.config.valid_exts,
                maxFilesize: new_page.config.max_file_size_mb,
                onfileschanged: changeSummaryFiles,
                oncomplete: uploadFinished
            });
        });
    });
</script>